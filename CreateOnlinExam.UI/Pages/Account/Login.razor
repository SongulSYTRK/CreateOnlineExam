@page "/login"
@inject IJSRuntime JSRuntime;
@inject IUnitOfWork unitofwork;

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Log In</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Log In</h4>
                    </div>
                    <div class="card-body">
                        <EditForm Model="log">
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label class="col-5">
                                    UserName :
                                </label>
                                <InputText id="username" @bind-Value="log.UserName" />
                            </div>
                            <div class="form-group">
                                <label class="col-5">
                                    Password :
                                </label>
                                <InputText id="password" @bind-Value="log.Password" />
                            </div>
                            <div class="form-group">
                                
                                <button type="submit" class="btn btn-primary btn-lg float-right">Log In</button>
                            </div>
                        </EditForm>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Register" class="btn btn-dark btn-block">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    


</body>
</html>



@code {
    private readonly AppUser log = new AppUser();

}
